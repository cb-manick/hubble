{
  "$id": "https://hubble.io/schemas/0.1/connect.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Specification - feature schema",
  "type": "object",
  "connectConfigs" : {
    "type" : "array",
    "items": {
      "$ref": "#/definitions/connectConfig"
    }
   },
  "definitions": {
    "connectConfig": {
      "type": "object",
      "name": {
        "type": "string",
        "minLength" : 1
      },
      "auth": {
        "$ref": "#/definitions/auth"
      },
      "headers": {
        "$ref": "#/definitions/header"
      },
      "instrumentation": {
        "$ref": "#/definitions/instrumentation"
      },
      "scenario": {
        "$ref": "#/definitions/scenario"
      },
      "environment": {
        "live": {
          "$ref": "#/definitions/environment"
        },
        "test": {
          "$ref": "#/definitions/environment"
        },
        "integration": {
          "$ref": "#/definitions/environment"
        }
      }
    },
    "auth": {
      "type": "object",
      "properties": {
        "authType": {
          "type": "string",
          "enum": [
            "basic",
            "digest",
            "apikey",
            "oauth"
          ]
        },
        "headerName": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "header": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/headerItem"
      }
    },
    "headerItem": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "minLength": 1
        },
        "value": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "instrumentation": {
      "type": "object",
      "properties": {
        "traceId": {
          "type": "string",
          "description": "unique trace-id of the interaction"
        }
      }
    },
    "scenario": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uri",
          "description": "unique identifier of the scenario which is used to certify the system"
        }
      }
    },
    "environment": {
      "type": "object",
      "properties": {
        "host" : {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}