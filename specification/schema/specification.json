{
  "$id": "https://hubble.io/schemas/0.1/specification.json",
  "$schema": "http://json-schema.org/draft-01/schema#",
  "description": "Capability specification",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Capability Specification unique identifier",
      "minLength": 1,
      "format": "uri"
    },
    "path": {
      "type": "string",
      "description" : "Capability Definition Path",
      "format": "uri"
    },
    "version": {
      "type": "string",
      "description": "Unique version for capability"
    },
    "connectConfigs": {
      "$ref": "connect.json#/connectConfigs"
    },
   "features": {
      "$ref": "features.json#/features"
    },
    "endpoints": {
      "$ref": "endpoints.json#/endpoints"
    },
    "callBackEndpoints": {
      "$ref": "endpoints.json#/endpoints"
    },
    "updateErrorEndpoints": {
      "$ref": "endpoints.json#/endpoints"
    },
    "healthEndpoints": {
      "$ref": "endpoints.json/endpoints"
    },
    "featureBundles": {
      "$ref": "featurebundles.deprecated.json#/featureBundles",
      "description": "Group of features that needs to be over ridden together."
    }
  }
}




