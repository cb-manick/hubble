{
  "$id": "https://hubble.io/schemas/0.1/specification.json",
  "$schema": "http://json-schema.org/draft-01/schema#",
  "description": "Capability specification",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Capability Specification unique identifier",
      "minLength": 1,
      "format": "uri"
    },
    "path": {
      "type": "string",
      "description": "Capability Definition Path",
      "format": "uri"
    },
    "version": {
      "type": "string",
      "description": "Unique version for capability"
    },
    "endpoints": {
      "$ref": "endpoints.json#/endpoints"
    },
    "overridingType": {
      "type": "string",
      "enum": [
        "single",
        "multiple"
      ]
    },
    "providerSelection": {
      "type": "string",
      "enum": [
        "Priority",
        "Rule"
      ]
    },
    "securityScope": {
      "$ref": "securityspecification.json#/security"
    },
    "containingCapabilities": {
      "$ref": "#/definitions/capabilityReferences"
    }
  },
  "definitions": {
    "capabilityReferences": {
      "type": "array",
      "description": "Capability Reference",
      "items": {
        "type": "object",
        "$ref": "#/definitions/capabilityReference"
      },
      "additionalItems": false,
      "minItems": 1
    },
    "capabilityReference": {
      "type": "object",
      "properties": {
        "capabilityRootedPath": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}







